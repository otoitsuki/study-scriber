# MLX Whisper API 環境變數配置

# 服務配置
WHISPER_API_WORKERS=4
WHISPER_API_PORT=8001
WHISPER_API_HOST=0.0.0.0

# 效能配置
WHISPER_API_MAX_REQUESTS_PER_MINUTE=10
WHISPER_API_MAX_CONCURRENT_PER_WORKER=1

# 模型配置
WHISPER_API_MODEL_CACHE_DIR=./models
WHISPER_API_DEFAULT_MODEL=whisper-large-v3

# 模型別名配置 (將 whisper-1 指向 breeze-asr-25)
WHISPER_API_MODEL_ALIASES=breeze-asr-25

# 您也可以設定多個，用逗號隔開
# WHISPER_API_MODEL_ALIASES=whisper-1:breeze-asr-25,large:whisper-large-v3

# 限制配置
WHISPER_API_MAX_FILE_SIZE=26214400  # 25MB
WHISPER_API_REQUEST_TIMEOUT=900     # 15 minutes

# 日誌配置
WHISPER_API_LOG_LEVEL=INFO

# 監控配置
WHISPER_API_ENABLE_METRICS=true
WHISPER_API_METRICS_PORT=9090

# 開發模式配置
# WHISPER_API_RELOAD=true  # 僅開發環境使用
# WHISPER_API_DEBUG=false  # 調試模式

# 安全配置
# 允許的主機列表，用逗號分隔
WHISPER_API_ALLOWED_HOSTS=localhost,127.0.0.1,custom-host.com
